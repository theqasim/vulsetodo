datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model TodoList {
  id    Int      @id @default(autoincrement())
  name  String
  items TodoItem[]
}

model TodoItem {
  id        Int      @id @default(autoincrement())
  name      String
  completed Boolean  @default(false)
  listId    Int
  list      TodoList @relation(fields: [listId], references: [id])
}

